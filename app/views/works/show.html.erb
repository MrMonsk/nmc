<div class="container profile-content">
  <h1 class="text-xs-center">
    <%= @work.title %>    
  </h1>
    <% if @work.user %>
      <h4 class="text-xs-center">by <%= @work.user.email %></h4>
    <% else %>
      <h4 class="text-xs-center">by Anonymous</h4>
    <% end %>
  <div class="col-xs-10 col-xs-offset-1">
    <hr />
    <div class="row">
      <h3 class="pull-xs-left">Description</h3>
    </div>
    <div class="row">
      <p class="m-l-2"><%= simple_format(@work.description) %></p>
    </div>
    <div class="row">
      <h3 class="pull-xs-left">Instrumentation</h3>
    </div>
    <div class="row">
      <i class="m-l-2"><%= @work.instrumentation %></i>      
    </div>
    <div class="row">
      <%= link_to 'Edit Work', edit_work_path(@work), class: 'pull-xs-right btn btn-sm btn-danger-outline' %>
    </div>
  </div>
</div>