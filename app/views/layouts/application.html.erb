<!DOCTYPE html>
<html>
<head>
  <title>Ursatz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">
  <nav class="navbar navbar-light bg-faded">
    <div class="nav navbar-nav">
      <a class="nav-item nav-link active" href="#">Ursatz<span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="#">Features</a>
      <a class="nav-item nav-link" href="#">Pricing</a>
      <a class="nav-item nav-link" href="#">About</a>
    </div>
  </nav>

  <% if notice.present? || flash[:info] %>
    <div class="alert alert-info alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p class="text-xs-center"><%= notice || flash[:info] %></p>
    </div>
  <% end %>
  <% if alert.present? || flash[:warning] %>
    <div class="alert alert-warning alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p class="text-xs-center"><%= alert || flash[:warning] %></p>
    </div>
  <% end %>
  <% if flash[:success] %>
    <div class="alert alert-success alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p class="alert alert-success"><%= flash[:success] %></p>
    </div>
  <% end %>
  <% if flash[:danger] %>
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p class="alert alert-danger"><%= flash[:danger] %></p>
    </div>
  <% end %>

  <%= yield %>

</div>

<br class='clr' />

</div>
<div id="footer">
  <div class="container">
    <b>Footer Here</b>
    <br />
    <%= link_to 'Link', '#' %>
  </div>
</div>

</body>
</html>
